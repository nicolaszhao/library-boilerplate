{
  "env": {
    "production": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "modules": false
          }
        ]
      ],
      "plugins": [
        ["@babel/plugin-transform-runtime", {
          "useESModules": true
        }],
        ["@babel/plugin-proposal-class-properties", { 
          "loose": false 
        }]
      ]
    },
    "test": {
      "presets": [
        "@babel/preset-env"
      ],
      "plugins": [
        "@babel/plugin-transform-runtime",
        ["@babel/plugin-proposal-class-properties", { 
          "loose": false 
        }]
      ]
    }
  }
}
